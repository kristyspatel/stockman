<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ncsu.stockman"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.ncsu.stockman.MainGameActivity"
            android:label="@string/title_activity_main_game"
            android:parentActivityName="edu.ncsu.stockman.Timeline" >
        </activity>
        <activity
            android:name="edu.ncsu.stockman.PickWordActivity"
            android:noHistory="true"
            android:label="@string/title_activity_pick_word"
            android:parentActivityName="edu.ncsu.stockman.Timeline" >
        </activity>
        <activity
            android:name="edu.ncsu.stockman.HangFriendActivity"
            android:label="@string/title_activity_hang_friend"
            android:parentActivityName="edu.ncsu.stockman.ChooseHangFriendActivity" >
        </activity>
        <activity
            android:name="edu.ncsu.stockman.ChooseHangFriendActivity"
            android:label="@string/title_activity_choose_hang_friend"
            android:parentActivityName="edu.ncsu.stockman.MainGameActivity" >
        </activity>
        <activity
            android:name="edu.ncsu.stockman.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="edu.ncsu.stockman.Splash_screen"
            android:launchMode="singleTask"
            android:label="@string/title_activity_splash_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.ncsu.stockman.Timeline"
            android:launchMode="singleTop"
            android:label="@string/title_activity_timeline" >
        </activity>
        <activity
            android:name="edu.ncsu.stockman.New_Game"
            android:label="@string/title_activity_new_game"
            android:noHistory="true"
            android:parentActivityName="edu.ncsu.stockman.Timeline" >
        </activity>
        <activity
            android:name="edu.ncsu.stockman.SettingsActivity"
            android:noHistory="true"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="edu.ncsu.stockman.StockMarketActivity"
            android:label="@string/title_activity_stock_market"
            android:parentActivityName="edu.ncsu.stockman.MainGameActivity" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity android:name="com.facebook.LoginActivity" >
        </activity>
        <activity
            android:name="edu.ncsu.stockman.ManageFriendsActivity"
            android:label="@string/title_activity_manage_friends"
            android:parentActivityName="edu.ncsu.stockman.SettingsActivity" >
            
        </activity>
        <activity
            android:name="edu.ncsu.stockman.CommentActivity"
            android:label="@string/title_activity_comment"
            android:parentActivityName="edu.ncsu.stockman.Timeline" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.ncsu.stockman.Timeline" />
        </activity>
    </application>

</manifest>
