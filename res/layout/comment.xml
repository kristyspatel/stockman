<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/rounded_box_comment"
    android:orientation="horizontal"
    android:padding="3dp" >

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <edu.ncsu.stockman.RoundedImageView
            android:id="@+id/profile_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/comment_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_img"
            android:gravity="center"
            android:text="Abdul"
            android:textColor="@color/kulur_purple"
            android:textSize="10sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/kulur_darkgrey"
        android:text="One letter: (m) was revealed by Kristy Patel." />

</LinearLayout>