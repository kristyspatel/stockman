<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="game_button">
        <item name="android:textColor">@color/kulur_beige</item>
    </style>
    <style name="game_button_inviatation" parent="game_button">
        <item name="android:textColor">@color/kulur_white</item>
    </style>
    
    <style name="button">
    </style>
    <style name="button_disabled" parent="hang_letter_button">
        <item name="android:textColor">#669131</item>
        <item name="android:enabled">false</item>
    </style>
    <style name="button_enabled" parent="hang_letter_button">
        <item name="android:textColor">#000000</item>
        <item name="android:enabled">true</item>
    </style>
    
    
    <style name="hang_letter_button">
        <item name="android:width">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">text</item>
        <item name="android:minWidth">48dip</item>
    </style>
    <style name="hang_letter_button_disabled" parent="hang_letter_button">
        <item name="android:textColor">#999999</item>
        <item name="android:enabled">false</item>
    </style>
    <style name="hang_letter_button_enabled" parent="hang_letter_button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="pickword_letter">
        <item name="android:width">20dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="main_letter">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
        <item name="android:width">25sp</item>
    </style>
    <style name="letter_revealed" parent="main_letter">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="letter_not_revealed"  parent="main_letter">
        <item name="android:textColor">#999999</item>
    </style>

    <style name="notification">
        <item name="android:textColor">#C0C0C0</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:width">20dp</item>
    </style>
    
    
    <!-- MainGameActivity -->
    <style name="cashText">
        <item name="android:textColor">@color/graphs_orange</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="assestsText">
        <item name="android:textColor">@color/graphs_beige</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="totalText">
        <item name="android:textColor">@color/kulur_white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Logs -->
    <style name="log">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="guess_log" parent="log">
        <item name="android:textColor">#FFBBFF</item>
    </style>
    <style name="reveal_log" parent="log">
        <item name="android:textColor">#FFC0CB</item>
    </style>
    <style name="guess_incorrect_log" parent="log">
        <item name="android:textColor">#BDFCC9</item>
    </style>
    <style name="reveal_incorrect_log" parent="log">
        <item name="android:textColor">#ADFF2f</item>
    </style>
    <style name="open_log" parent="log">
        <item name="android:textColor">#CAE1FF</item>
    </style>
    <style name="invite_log" parent="log">
        <item name="android:textColor">#CAE1FF</item>
    </style>
    <style name="died_log" parent="log">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="pickword_log" parent="log">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="accept_log" parent="log">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="hanged_log" parent="log">
        <item name="android:textColor">#BFEFFF</item>
    </style>
    <style name="buy_log" parent="log">
        <item name="android:textColor">#AEEEEE</item>
    </style>
    <style name="sell_log" parent="log">
        <item name="android:textColor">#7FFFD4</item>
    </style>

        
    
    

</resources>
